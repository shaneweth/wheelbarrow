<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each rocks}}
          {{#unless this.in_bucket}}
            <div>
              <form action="/rocks/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='rockAvail'> {{this.rock_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each rocks}}
          {{#if this.in_bucket}}
            <div class='rockBucket'>
              <div>
                {{this.rock_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add Your Favorite Rock</h2>

<div class="row">
  <div class="col s12">
    <form action="/rocks" method="POST">
      <input type="text" id="name" name="rock_name" placeholder="Fancy Fancy Rocks!!">
      <button type="submit" class="addRockType">Add The Burger</button>
    </form>
  </div>
</div>